@model IEnumerable<BlackJack.ViewModels.PlayerCardsViewModel>
@{
    ViewBag.Title = "HandOverCards";
}

<h2>HandOverCards</h2>

<div id="result">
    <table class="table">
        <h1>Cards:</h1>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Player.Name
                <td>
                    @foreach (var t in item.Cards)
                    {
                        @t.Value
                        <span>, </span>
                    }
                </td>
                </td>
            </tr>
        }
    </table>



    <table class="table">
        <h1>Total scores:</h1>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Player.Name:
                <td>
                    @item.Player.Score
                </td>
                </td>
            </tr>
        }
    </table>

</div>

@using (Ajax.BeginForm("PlayAgain", new AjaxOptions { UpdateTargetId = "result" }))
{
    <button name="takeCard" type="submit" value="true">Draw</button>
    <button name="takeCard" type="submit" value="false">Stand</button>
}

    <li>@Html.ActionLink("StartNewRound", "StartNewRound", "GameLogic", new { area = "" }, null)</li>



@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

